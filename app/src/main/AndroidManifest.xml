<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_bucket_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_bucket_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activities.DetailedBucketActivity"
            android:theme="@style/AppTheme.detailedActivity">
        </activity>

        <activity android:name=".ui.splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.activities.BucketAddActivity"
            android:parentActivityName=".ui.activities.DashboardActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.statusBarTransparent"
            tools:targetApi="23">
        </activity>

        <activity
            android:name=".ui.activities.DashboardActivity">
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>